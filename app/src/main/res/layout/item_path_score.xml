<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:clickable="false"
        android:focusable="false"
        android:paddingStart="0dp">

        <!-- Gold Cup Emoji -->
        <TextView
            android:id="@+id/firstPlace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/firstPlace"
            android:textSize="34sp"
            android:layout_weight="2"
            android:visibility="gone"
            android:gravity="center" />

        <TextView
            android:id="@+id/secondPlace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/secondPlace"
            android:textSize="30sp"
            android:layout_weight="2"
            android:visibility="gone"
            android:gravity="center" />

        <TextView
            android:id="@+id/thirdPlace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/thirdPlace"
            android:textSize="30sp"
            android:layout_weight="2"
            android:visibility="gone"
            android:gravity="center" />

        <TextView
            android:id="@+id/rank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_weight="2"
            android:textColor="@color/textColPrimary"
            android:gravity="center" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="20sp"
            android:textColor="@color/textColPrimary"
            android:gravity="top" />

        <TextView
            android:id="@+id/dateTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="20sp"
            android:textColor="@color/textColPrimary"
            android:gravity="end" />
    </LinearLayout>
</LinearLayout>
